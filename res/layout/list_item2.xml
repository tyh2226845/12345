<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/picture_article"
            android:src="@drawable/thecode"
         	android:clickable="false"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_imageEdit"
                android:src="@drawable/edit_ico"
                />
            <ImageView 
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_imageDel"
                android:src="@drawable/del_ico"
                />
        </LinearLayout>
    </LinearLayout>
      <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/title_article"
              android:text="标题"
              />
          <TextView 
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:id="@+id/content_article"
              android:text="内容"
              />
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/date_article"
              android:text="2014-06-8 09:09:15"
              android:layout_gravity="right"
              />
      </LinearLayout>

</LinearLayout>
